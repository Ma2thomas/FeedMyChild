<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sourabh_.childtrackingsystem.ConfirmActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="LIST OF ITEMS"
        android:textColor="#1f910b"
        android:gravity="center_horizontal"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:textSize="20dp"
        android:layout_marginTop="40dp"/>

    <ImageView
        android:id="@+id/image1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="28dp"
        android:layout_marginTop="132dp"
        android:src="@drawable/bf1" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:textSize="20dp"
        android:layout_alignBottom="@+id/image1"
        android:layout_marginBottom="30dp"
        android:layout_toEndOf="@+id/image1"
        android:text="Dosa"
        android:id="@+id/textView9" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_alignBaseline="@+id/textView9"
        android:layout_alignBottom="@+id/textView9"
        android:layout_marginStart="22dp"
        android:layout_toEndOf="@+id/textView9"
        android:text="30/-"
        android:textSize="20dp"
        android:id="@+id/textView10" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignStart="@+id/image1"
        android:layout_centerVertical="true"
        android:src="@drawable/lu1"
        android:id="@+id/imageView12" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_alignStart="@+id/textView9"
        android:layout_centerVertical="true"
        android:text="Veg Fried Rice"
        android:textSize="20dp"
        android:id="@+id/textView11" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_alignBaseline="@+id/textView11"
        android:layout_alignBottom="@+id/textView11"
        android:layout_alignStart="@+id/textView10"
        android:text="50/-"
        android:textSize="20dp"
        android:id="@+id/textView12" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignStart="@+id/imageView12"
        android:layout_below="@+id/imageView12"
        android:layout_marginTop="38dp"
        android:src="@drawable/snac"
        android:id="@+id/imageView13" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_alignBottom="@+id/imageView13"
        android:layout_marginBottom="34dp"
        android:layout_marginEnd="10dp"
        android:layout_toStartOf="@+id/textView12"
        android:text="VegRoll"
        android:textSize="20dp"
        android:id="@+id/textView13" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_alignBaseline="@+id/textView13"
        android:layout_alignBottom="@+id/textView13"
        android:layout_toEndOf="@+id/textView13"
        android:text="20/-"
        android:textSize="20dp"/>

    <Button
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="17dp"
        android:layout_marginStart="17dp"
        android:background="#1f910b"
        android:text="Confirm"
        android:textColor="#fcfffc"
        android:id="@+id/button1" />

    <Button
        android:id="@+id/button2"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_alignBaseline="@+id/button1"
        android:layout_alignBottom="@+id/button1"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="12dp"
        android:background="#1f910b"
        android:text="delivery point"
        android:textColor="#fcfffc" />
    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:background="#1f910b"
        android:id="@+id/button6"
        android:layout_marginTop="80dp"
        android:layout_centerHorizontal="true"
        android:text="View offers!!"
        android:textColor="#fcfffc"
        />

</RelativeLayout>
