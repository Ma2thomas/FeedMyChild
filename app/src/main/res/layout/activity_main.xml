<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="45dp"
    tools:context="com.example.sourabh_.childtrackingsystem.MainActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="SELECT AN ITEM"
        android:textColor="#1f910b"
        android:gravity="center_horizontal"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:textSize="20dp"
       />
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="39dp"
        android:src="@drawable/bf1" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignTop="@+id/imageView"
        android:layout_marginStart="14dp"
        android:layout_toEndOf="@+id/imageView"
        android:src="@drawable/lu1"
        android:id="@+id/imageView3" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignTop="@+id/imageView3"
        android:layout_marginStart="19dp"
        android:layout_toEndOf="@+id/imageView3"
        android:src="@drawable/snac"
        android:id="@+id/imageView8" />
    <TextView
        android:layout_width="500dp"
        android:layout_height="30dp"
        android:text="Dosa/Veg Fried Rice/Veg Roll"
        android:textSize="20dp"
        android:layout_marginTop="150dp"
        android:id="@+id/text1"
        />

    <Button
        android:id="@+id/button2"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:layout_alignStart="@+id/button3"
        android:layout_below="@+id/imageView8"
        android:background="#1f910b"
        android:text="select"
        android:textColor="#fcfffc" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/button2"
        android:layout_marginStart="10dp"
        android:layout_marginTop="31dp"
        android:src="@drawable/bf2"
        android:id="@+id/imageView6" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignStart="@+id/imageView3"
        android:layout_alignTop="@+id/imageView6"
        android:layout_marginStart="14dp"
        android:src="@drawable/lu2"
        android:id="@+id/imageView7" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignStart="@+id/imageView8"
        android:layout_alignTop="@+id/imageView7"
        android:src="@drawable/sna"
        android:id="@+id/imageView10" />

    <TextView
        android:layout_width="500dp"
        android:layout_height="30dp"
        android:text="Roti/Rice ang Veg Curry/Snacks"
        android:textSize="20dp"
        android:layout_marginTop="340dp"
        android:id="@+id/text2"
        />

    <Button
        android:id="@+id/button3"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:layout_alignBaseline="@+id/text2"
        android:layout_alignBottom="@+id/text2"
        android:layout_alignParentEnd="true"
        android:background="#1f910b"
        android:text="select"
        android:textColor="#fcfffc" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignStart="@+id/imageView6"
        android:layout_below="@+id/button3"
        android:layout_marginTop="28dp"
        android:src="@drawable/bf3"
        android:id="@+id/imageView9" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignTop="@+id/imageView9"
        android:layout_toStartOf="@+id/imageView10"
        android:src="@drawable/lu3"
        android:id="@+id/imageView11" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignStart="@+id/imageView10"
        android:layout_alignTop="@+id/imageView11"
        android:layout_marginStart="25dp"
        android:src="@drawable/cookies" />
    <TextView
        android:layout_width="500dp"
        android:layout_height="30dp"
        android:text="Bread jam/Chappathi Chicken/Cookies"
        android:textSize="16dp"
        android:layout_marginTop="540dp"
        android:id="@+id/text3"
        />

    <Button
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:layout_alignBaseline="@+id/text3"
        android:layout_alignBottom="@+id/text3"
        android:layout_alignStart="@+id/button3"
        android:background="#1f910b"
        android:text="select"
        android:textColor="#fcfffc"
        android:id="@+id/button4"/>
</RelativeLayout>
